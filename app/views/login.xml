<Alloy>
	<Window title="login" id='win'>
		<TableView>
			<TableViewRow>
				<Label textAlign="left" top="10">username:</Label>
				<TextArea id="Username" borderWidth="2" borderRadius="5" textAlign="left" top="60" width="300" height="50"></TextArea>
			</TableViewRow>
			<TableViewRow>
				<Label textAlign="left" top="10">Password:</Label>
				<TextField id="Password" borderWidth="2" borderRadius="5" textAlign="left" top="60" width="300" height="50" passwordMask="true"></TextField>
			</TableViewRow>
			<TableViewRow>
				<Button onClick="btnlogin" type="submit">login in</Button>
			</TableViewRow>
		</TableView>
	</Window>
</Alloy>